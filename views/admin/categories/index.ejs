<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>
<hr>
<div class="container-fluid">
  <div class="card">
    <div class="card-header">
      <h2>Categorias</h2>
    </div>
    <div class="card-body">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Id</th>
            <th>Titulo</th>
            <th>Slug</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% categories.forEach(category => { %>
            <tr>
              <th><%= category.id %></th>
              <th><%= category.title %></th>
              <th><%= category.slug %></th>
              <th></th>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
</div>
